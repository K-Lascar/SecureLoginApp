{
  "name": "login-app",
  "productName": "login-app",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": "LoneLascar <36436810+LoneLascar@users.noreply.github.com>",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "login_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-fetch": "^1.7.2",
    "electron-squirrel-startup": "^1.0.0",
    "filestack-js": "^3.20.0",
    "jszip": "^3.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "9.2.0"
  },
  "build": {
    "appId": "com.krishneelkumar.my-app",
    "productName": "MyApp",
    "copyright": "Copyright Â© 2020 ${author}",
    "mac": {
      "icon": "src/icon/signals.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/icon/snowman.png",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "installerIcon": "src/icon/smile.png",
      "uninstallerIcon": "src/icon/sad.png",
      "uninstallDisplayName": "login-app",
      "license": "licence.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./icon/**/*",
      "*.js"
    ],
    "directories": {
      "buildResources": "icon"
    }
  }
}
